<h1>New contact</h1>

<%= form_for(@contact) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited this contact from being saved:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.text_field :name, :placeholder => 'Nombre' %>
  </div>
  <div class="field">
    <%= f.text_field :email, :placeholder => 'Correo electronico' %>
  </div>
  <div class="field">
    <%= f.select :tipo, "<option>Pagina Web</option><option>Dispositivo Movil</option><option>Aplicacion web</option><option>otros</option>".html_safe %>
  </div>
  <div class="field">
    <%= f.text_area :description %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>


